{
  "influxdb": {
    "server"     : "influxdb",
    "port"       : "8086",
    "username"   : "root",
    "password"   : "root",
    "database"   : "sensu"
  },
  "handlers": {
    "influxdb": {
      "type"  : "udp",
      "socket": {
        "host": "influxdb",
        "port": 8089
      }
    },
    "file": {
      "type": "pipe",
      "command": "/etc/sensu/handlers/event-file.rb"
    },
    "metrics": {
      "type": "set",
      "handlers": [ "file", "influxdb" ]
    }
  }
}
